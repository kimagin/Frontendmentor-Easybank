---
import Logo from './Logo.astro'
import CTA from './CTA.astro'
const navigationItems = ['Home', 'About', 'Contact', 'Blog', 'Careers']
---

<nav class="absolute w-full top-0 left-0 right-0 bg-white mx-auto z-10">
  <!-- ::Hamburger Menu:: -->
  <div
    class="relative w-screen z-30 md:hidden"
    x-show="isMenuOpen"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="-translate-y-10 opacity-0"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-100"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-10"
    x-ref="hamburger"
    @click.outside="isMenuOpen = false">
    <menu
      class="menu absolute h-fit mx-auto top-24 left-10 right-10 bg-white flex justify-center rounded-md z-30">
      <ul class="flex flex-col gap-6 p-8 items-center">
        {
          navigationItems.map((item) => (
            <li class="w-fit text-xl text-dark-blue text-bold">
              <a href="#">{item}</a>
            </li>
          ))
        }
      </ul>
    </menu>
  </div>

  <div
    class="wrapper py-6 md:py-0 px-6 flex items-center justify-between max-w-6xl mx-auto">
    <Logo />
    <div class="links text-sm font-base text-grayish-blue">
      <ul class="hidden md:flex gap-6">
        {
          navigationItems.map((item) => (
            <li class="group flex flex-col h-20 justify-between hover:cursor-pointer ">
              <span class="h-2 " />
              <a href="#">{item}</a>

              <div
                class=" bg-gradient-to-r from-lime-green to-bright-cyan w-full  h-1 scale-x-0 group-hover:scale-x-100 
              
              origin-left
              transition-transform duration-300 ease-in-out"
              />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="hidden md:flex">
      <CTA name="Request Invite" />
    </div>
    <div class="md:hidden">
      <button
        @click.prevent="isMenuOpen=!isMenuOpen"
        class="hamburger"
        x-show="!isMenuOpen">
        <img
          src="./images/icon-hamburger.svg"
          alt=""
        />
      </button>
      <button
        @click.prevent="isMenuOpen=!isMenuOpen"
        class="close hover:rotate-180 transition-all"
        x-show="isMenuOpen">
        <img
          src="./images/icon-close.svg"
          alt=""
        />
      </button>
    </div>
  </div>
</nav>
