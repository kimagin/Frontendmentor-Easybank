---
export interface Props {
  title: string
  fav: string
}
const { title = 'Generic Page', fav = '' } = Astro.props
---

<head>
  <meta charset="utf-8" />
  <link
    rel="icon"
    type="image/svg+xml"
    href={fav}
  />
  <meta
    name="viewport"
    content="width=device-width,
    initial-scale=1.0"
  />
  <meta
    name="generator"
    content={Astro.generator}
  />
  <title>{title}</title>
  <link
    rel="preconnect"
    href="https://fonts.googleapis.com"
  />
  <link
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;700&display=swap"
    rel="stylesheet"
  />
</head>
